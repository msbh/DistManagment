@model IEnumerable<DistManagment.order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th style="width:10%;">Order Name
        </th>
        <th style="width:25%;">Order Delivered  To
        </th>
        <th style="width:10%;">Delivery Date
        </th>
        <th style="width:5%;" >Quantity
        </th>
        <th style="width:5%;">Delivered ?
        </th>
        <th style="width:20%;"></th>
        <th style="width:20%;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.order_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deliver_to)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deliver_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @if(item.status==false){
                @Html.ActionLink("Assign to Agent", "Create", "agentOrder") 
                 @Html.ActionLink("Add Product to Order", "Create", "orderProducts")
                 }
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
